        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="When making decisions I look at several possible options before choosing one based on returns to the farm

" />

        <RadioGroup

            android:id="@+id/rg_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton


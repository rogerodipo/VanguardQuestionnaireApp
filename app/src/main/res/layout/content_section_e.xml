            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="I apply new methods to improve my beekeeping practice" />

        <RadioGroup
            android:id="@+id/rg_apply_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_height="wrap_content"
            android:text="I generally use improved beekeeping equipment to create value in my bee keeping practice  " />

        <RadioGroup
            android:id="@+id/rg_create_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_create_value"
                android:text="Not at all (1)" />


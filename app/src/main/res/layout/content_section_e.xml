        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="I seek many sources of information in order to improve my beekeeping farm operations
information (e.g. from the media)
" />

        <RadioGroup

            android:id="@+id/rg_many_sources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_many_sources"
                android:text="Not at all (1)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_many_sources"
                android:text="To a small extent (2)" />


                android:layout_height="match_parent"
                android:onClick="rg_hard_work"
                android:text="To a great extent (4)" />


        </RadioGroup>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="I can effectively schedule the tasks involved in bee farming." />

        <RadioGroup

            android:id="@+id/rg_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_schedule"
                android:text="Not at all (1)" />

            <RadioButton


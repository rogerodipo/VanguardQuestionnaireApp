        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="I have expanded my production to have a chance at making higher profits" />

        <RadioGroup

            android:id="@+id/rg_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton


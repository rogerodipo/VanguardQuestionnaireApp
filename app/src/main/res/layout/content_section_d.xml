<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SectionD"
    tools:ignore="HardcodedText"
    tools:showIn="@layout/activity_section_d">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView

            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section D: Psychological Factors"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="26.	What motivated you to start beekeeping?"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioGroup

            android:id="@+id/rg_motivation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_motivation"
                android:text="Inheritance" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_motivation"
                android:text="Encourage from family and friends" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_motivation"
                android:text="Observing other successful beekeepers" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_motivation"
                android:text="beekeeping is profitable" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_motivation"
                android:text="For Survival" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_motivation"
                android:text="Food source" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/women_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/motivation_to_start_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other"
              >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="27.	How did acquire your beekeeping knowledge?"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioGroup

            android:id="@+id/rg_knowledge_src"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_knowledge_src"
                android:text="Family Members" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_knowledge_src"
                android:text="Neighbours" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_knowledge_src"
                android:text="Apprenticeship " />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_knowledge_src"
                android:text="Fellow Farmer" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_knowledge_src"
                android:text="Training participation" />


        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/other_knowledge_src_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other"
              >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="28.	How much honey do you sell?"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioGroup

            android:id="@+id/rg_honey_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_honey_sales"
                android:text="None" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_honey_sales"
                android:text="Quarter (25 per cent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_honey_sales"
                android:text="Half (50 per cent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_honey_sales"
                android:text="All (100 per cent)" />


        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="12dp"
            android:text="29.	Do you sell other beekeeping products?"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioGroup

            android:id="@+id/rg_other_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_other_products"
                android:layout_weight="1"
                android:text="Yes" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_other_products"
                android:layout_weight="1"
                android:text="No" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="30.	If yes, kindly indicate which ones"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <CheckBox
            android:id="@+id/cb_beeswax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beeswax" />

        <CheckBox
            android:id="@+id/cb_propolis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Propolis" />

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/other_bee_products_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Others"
              >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="12dp"
            android:text="31.	If yes, where do you sell your beekeeping products?"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cb_sell_within_village"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Within the village" />

        <CheckBox
            android:id="@+id/cb_sell_to_broker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broker/ Middle Men/ Traders" />

        <CheckBox
            android:id="@+id/cb_direct_to_consumer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direct consumers away from the village" />

        <CheckBox
            android:id="@+id/cb_honey_processor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Honey Processors" />

        <CheckBox
            android:id="@+id/cb_cooperative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beekeeping Cooperative" />


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/other_places_to_sell_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Others"
              >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="12dp"
            android:text="32.	Do you plan bee farm activities before the start of a season?"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/rg_planning_b4_season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_planning_b4_season"
                android:layout_weight="1"
                android:text="Yes" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_planning_b4_season"
                android:layout_weight="1"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="12dp"
            android:text="33.	If yes, is do you write it down?"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioGroup

            android:id="@+id/rg_write_planning"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_write_planning"
                android:layout_weight="1"
                android:text="Yes" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_write_planning"
                android:layout_weight="1"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="12dp"
            android:text="34.	Do you record and maintain bee farm records?"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RadioGroup

            android:id="@+id/rg_maintain_records"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_maintain_records"
                android:layout_weight="1"
                android:text="Yes" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_maintain_records"
                android:layout_weight="1"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="12dp"
            android:text="35.	What are your sources of beekeeping information? Kindly select where appropriate."
            android:textColor="@color/black"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cb_newspapers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newspapers" />

        <CheckBox
            android:id="@+id/cb_television"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Television" />

        <CheckBox
            android:id="@+id/cb_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Radio" />

        <CheckBox
            android:id="@+id/cb_internet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Internet" />

        <CheckBox
            android:id="@+id/cb_social_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social Media Platforms" />

        <CheckBox
            android:id="@+id/cb_fellow_farmers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fellow farmers" />

        <CheckBox
            android:id="@+id/cb_farmer_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Farmer groups" />

        <CheckBox
            android:id="@+id/cb_extension_workers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extension workers" />

        <CheckBox
            android:id="@+id/cb_private_sector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private sector partners (processor, traders, financial institutions" />

        <CheckBox
            android:id="@+id/cb_ngo_institutions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nongovernment intuitions (NGO)" />

        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/other_sources_of_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Others"
              >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="12dp"
            android:text="36.	Kindly indicate, on a level of 0 to 3, 0 (not all) to 3 (Great Extent) your level of agreement with the following statements."
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="I highly desire to gain more income from my bee farming activities." />

        <RadioGroup

            android:id="@+id/rg_desire_more_income"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_desire_more_income"
                android:text="0 (Not at all)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_desire_more_income"
                android:text="1 (Small Extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_desire_more_income"
                android:text="2 (Moderate extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_desire_more_income"
                android:text="3 (Great Extent)" />


        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Beekeeping is a profitable farming enterprise" />

        <RadioGroup

            android:id="@+id/rg_beekeeping_is_profitable"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_beekeeping_is_profitable"
                android:text="0 (Not at all)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_beekeeping_is_profitable"
                android:text="1 (Small Extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_beekeeping_is_profitable"
                android:text="2 (Moderate extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_beekeeping_is_profitable"
                android:text="3 (Great Extent)" />


        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="I would like to distribute my product to new client markets" />

        <RadioGroup

            android:id="@+id/rg_desire_to_reach_new_markets"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_desire_to_reach_new_markets"
                android:text="0 (Not at all)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_desire_to_reach_new_markets"
                android:text="1 (Small Extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_desire_to_reach_new_markets"
                android:text="2 (Moderate extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_desire_to_reach_new_markets"
                android:text="3 (Great Extent)" />


        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="My ability to plan, produce and market agricultural products if of importance in bee farming." />

        <RadioGroup

            android:id="@+id/rg_planning_is_important"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_planning_is_important"
                android:text="0 (Not at all)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_planning_is_important"
                android:text="1 (Small Extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_planning_is_important"
                android:text="2 (Moderate extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_planning_is_important"
                android:text="3 (Great Extent)" />


        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="The  knowledge I have is adequate to assist me in beekeeping" />

        <RadioGroup

            android:id="@+id/rg_knowledge_is_adequate"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_knowledge_is_adequate"
                android:text="0 (Not at all)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_knowledge_is_adequate"
                android:text="1 (Small Extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_knowledge_is_adequate"
                android:text="2 (Moderate extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_knowledge_is_adequate"
                android:text="3 (Great Extent)" />


        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="I would like to gain deeper understanding of information relating to bee farming." />

        <RadioGroup

            android:id="@+id/rg_would_like_deeper_understanding"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_would_like_deeper_understanding"
                android:text="0 (Not at all)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_would_like_deeper_understanding"
                android:text="1 (Small Extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_would_like_deeper_understanding"
                android:text="2 (Moderate extent)" />

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="rg_would_like_deeper_understanding"
                android:text="3 (Great Extent)" />


        </RadioGroup>

        <Button
            android:id="@+id/rg_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:onClick="onSubmit"
            android:background="@color/colorPrimary"
            android:text="Proceed to Section E"
            android:textColor="@color/white" />


    </LinearLayout>
</ScrollView>